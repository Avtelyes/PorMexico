<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @posts.each do |post| %>
      <tr>
        <td> <%= post.user.name %></td>
        <td> <%= post.content %></td>
       <td>
         <% if post.category == "0"%>
             Necesito
         <% elsif post.category =="1"%>
             Quiere ayudar con
           <% end %>
         <%= post.requirements.find_each do |req| %>
            <%= req.name %>,
         <% end -%>
       </td>
        <td>
          <%= post.requirements.find_each do |req| %>
              <%= req.name %>,
          <% end -%>
        </td>
        <td> <% if post.user.id == current_user&.id %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Â¿Estas seguro de que deseas borrar esta publicaciÃ³n?' } %>
          <% elsif post.category == "0" %>
              Ayudar
          <% elsif post.category == "1" %>
              Solicitar
          <% end %>
        </td>
        <td>
          <%= post.helping_users.count %> persona(s) ayudando
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Necesito Ayuda', new_post_path(:category => 0) %>
<%= link_to 'Ofrecer Ayuda', new_post_path(:category => 1) %>

